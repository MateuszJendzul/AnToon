<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/comicsCardViewWidth"
    android:layout_height="wrap_content"
    android:foreground="@drawable/card_view_foreground"
    app:cardBackgroundColor="@color/darker_background_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/comicsCardViewHeight">

        <ImageView
            android:id="@+id/comics_picture_ID"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/gray"
            android:contentDescription="@string/comicsPictureDescriptionString"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/comics_name_ID"
            style="@style/SmallTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/black"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/comicsNameString"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comics_picture_ID" />

        <TextView
            android:id="@+id/newest_chapter_ID"
            style="@style/SmallTextAppearance"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/chapter_count_background"
            android:text="@string/newestChapter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/at_chapter_ID"
            style="@style/SmallTextAppearance"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/chapter_count_background"
            android:text="@string/atChapter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
