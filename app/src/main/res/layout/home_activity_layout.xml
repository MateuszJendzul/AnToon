<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_activity_layout_ID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AnToon.NoActionBar"
    tools:ignore="HardcodedText, TextContrastCheck">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/home_activity_layout_welcome_text_ID"
        style="@style/LargeTextAppearance"
        android:layout_marginTop="80dp"
        android:text="@string/home_activity_layout_welcome_text"
        app:layout_constraintBottom_toBottomOf="@+id/home_activity_layout_ID"
        app:layout_constraintEnd_toEndOf="@+id/home_activity_layout_ID"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/home_activity_layout_ID"
        app:layout_constraintTop_toTopOf="@+id/home_activity_layout_ID"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/home_activity_layout_login_button_ID"
        style="@style/MediumButtonAppearance"
        android:layout_marginBottom="220dp"
        android:text="@string/login_text"
        app:layout_constraintBottom_toBottomOf="@+id/home_activity_layout_ID"
        app:layout_constraintEnd_toEndOf="@+id/home_activity_layout_ID"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/home_activity_layout_ID"
        app:layout_constraintTop_toBottomOf="@+id/home_activity_layout_welcome_text_ID"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>