<resources>

    <style name="SmallEditTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/komtxtb_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/darker_text_color</item>
        <item name="android:textColorHint">@color/darker_text_color</item>
        <item name="android:background">@drawable/light_ripple_edit_background</item>
        <item name="singleLine">true</item>
        <item name="android:shadowColor">@color/transparent</item>
        <item name="android:shadowDx">22</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:importantForAutofill">yes</item>
    </style>

